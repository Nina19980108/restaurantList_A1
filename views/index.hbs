<div class="container d-flex p-2 mt-5 justify-content-between flex-wrap">

  <div class="container d-flex p-2 mt-5 justify-content-between ">

    <div class="d-flex">
      {{!-- search bar --}}
      <form action="/search" class="d-flex">
        <div class="input-group mb-3 d-flex h-25">
          <input type="text" class="form-control" placeholder="restaurant's name..." aria-label="restaurant's name"
            aria-describedby="restaurant's name" name="keyword" value="{{ keyword }}">
          <div class="input-group-append">
            <button class="btn btn-light" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>

      {{!-- Create btn --}}
      <form class="h-75" action="/restaurant/new">
        <button class="btn btn-secondary ms-3" type="submit">Create</button>
      </form>
    </div>


    <div>

      {{!-- sort input --}}
      <form action="/" method="get" class="d-flex">
        <div class="input-group mb-1">
          <select class="form-select" id="sort" name="sort">
            <option selected>sort</option>
            <option value="A -> Z">A -> Z</option>
            <option value="Z -> A">Z -> A</option>
            <option value="category">類別</option>
            <option value="location">地區</option>
          </select>
        </div>
        <div class="input-group-append">
          <button class="btn btn-light" type="submit" id="sort-button"><i class="fas fa-search"></i></button>
        </div>
      </form>
      {{#if sort}}
      <p style="color: rgba(240, 255, 255, 0.646);" class="mx-2">sort by {{ sort }}</p>
      {{/if}}
    </div>



  </div>


  {{!-- restaurants --}}

  <div class="container d-flex flex-wrap justify-content-between">

    {{#each restaurant }}

    <div class="card mb-5" style="width: 22rem;">
      <img src="{{this.image}}" class="card-img-top" alt="restaurant-image" style="height: 18rem;">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">{{this.name}}</li>
      </ul>
      <div class="card-body d-flex justify-content-end align-items-center">
        <a href="/restaurant/{{this._id}}/edit" class="card-link">Edit</a>
        <a href="/restaurant/{{this._id}}" class="card-link">Detail</a>
        <form action="/restaurant/{{ this._id }}?_method=DELETE" method="POST">
          <button class="btn btn-outline-secondary mx-3">Delete</button>
        </form>
      </div>
    </div>

    {{/each}}

  </div>


</div>